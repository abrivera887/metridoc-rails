              %td{:align => "center"}="#{data_one}"
              %td{style: 'background-color: #ADD8E6;', :align => "center"}="#{data_two}"
            -elsif data_two < 0
              %td{:align => "center"}="#{data_one}"
              %td{style: 'background-color: #FFA07A;', :align => "center"}="#{data_two}"
            -elsif data_two==0
